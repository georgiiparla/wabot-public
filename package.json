{
  "name": "wabot-typescript",
  "version": "1.0.0",
  "description": "Refactored WhatsApp bot in TypeScript with PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "prisma:generate": "dotenv -- prisma generate",
    "prisma:migrate": "dotenv -- prisma migrate dev",
    "prisma:seed": "dotenv -- ts-node prisma/seed.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "typescript",
    "prisma",
    "postgres"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-useragent": "^1.0.15",
    "transliteration": "^2.3.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.5.0",
    "@types/express-useragent": "^1.0.5",
    "@types/node": "^20.12.12",
    "dotenv-cli": "^11.0.0",
    "nodemon": "^3.1.0",
    "prisma": "^6.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
